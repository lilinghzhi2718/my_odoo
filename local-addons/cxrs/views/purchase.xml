<?xml version="1.8" encoding="utf-8"?>
<odoo>

    <record id='cxrs_purchase_tree_view' model="ir.ui.view">
        <field name="name">采购信息</field>
        <field name="model">cxrs.purchase</field>
        <field name="arch" type="xml">
                <tree>
                    <field name="product_name"/>
                    <field name="purchase_ids"/>
                    <field name="purchase_date"/>
                    <field name="purchase_state"/>
                </tree>
        </field>
    </record>

<record id="cxrs_purchase_kanban_view" model="ir.ui.view">
    <field name="model">cxrs.purchase</field>
    <field name="arch" type="xml">
        <kanban class="o_modules_kanban" default_group_by="purchase_state" default_order="purchase_state">
            <field name="purchase_state"/>
            <field name="color"/>
            <templates>
                <t t-name="kanban-box">
                    <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)}">
                    <div class="o_dropdown_kanban dropdown">
                        <a class="dropdown-toggle btn" data-toggle="dropdown" role="button" aria-label="Dropdown menu"
                            title="Dropdown menu" href="#">
                            <span class="fa fa-ellipsis-v"/>
                        </a>
                        <div class="dropdown-menu" role="menu">
                            <t t-if="widget.editable">
                                <a role="menuitem" type="edit" class="dropdown-item">编辑</a>
                            </t>
                            <t t-if="widget.deletable">
                                <a role="menuitem" type="delete" class="dropdown-item">删除</a>
                            </t>
                            <ul class="oe_kanban_colorpicker" data-field="color"/>
                        </div>

                    </div>


                    <div>
                        <div class="oe_kanban_body">
                            <div style="font-size:20px;">
                                <strong>
                                    <a type="open">
                                        <field name="product_name"/>
                                    </a>
                                </strong>
                            </div>
                            <ul>
                                <li>
                                    <field name="purchase_ids"/>
                                </li>
                                <li>
                                    <field name="purchase_date"/>
                                </li>
                            </ul>
                        </div>
                        <div class="o_kanban_record_bottom">
                            <div class="oe_kanban_bottom_left">
                              <field name="purchase_state" widget="priority"/>
                            </div>
                            <div class="oe_kanban_bottom_right">
                                <field name="product_img" widget="image" options="{'size':[80,80]}"/>
                            </div>
                        </div>
                        <div class="oe_clear"/>
                    </div>
                    </div>
                </t>
            </templates>
        </kanban>
    </field>

</record>
<record id='cxrs_purchase_form_view' model="ir.ui.view">
        <field name="name">采购订单</field>
        <field name="model">cxrs.purchase</field>
        <field name="arch" type="xml">
                <form>
                    <header>
                        <button string="取消" name="button_one" type="object" class="oe_highlight"/>
                        <button string="验证" name="button_two" type="object" class="oe_highlight" attrs="{'invisible': [('purchase_state', '=', 'two')]}"/>
                        <button string="确认订单" name="button_three" type="object" class="oe_highlight" attrs="{'invisible': [('purchase_state', '=', 'three')]}"/>
                            <field name="purchase_state" widget="statusbar" statusbar_visible="one,two,three"/>
                    </header>
                        <sheet>
                            <group>
                                <group>
                                     <field name="purchase_ids"/>
                                     <field name="product_name"/>
                                     <field name="product_img" widget ='image' class ="oe_avatar oe_left"/>
                                 </group>
                                <sheet>
                                <group>
                                    <field name="purchase_date"/>
                                     <field name="purchase_cost"/>
                                     <field name="purchase_num"/>
                                    <field name="purchase_money"/>
                                    <field name="purchase_detail"/>
                                </group>
                                </sheet>
                                <sheet>
                                <group>
                                     <field name="pu_pr_id"/>
                                        <group>
                                     <field name="pu_pe_id" options="{'create': true}"/>
                                        </group>
                                        <group>
                                        <button string="creat" name="button_four" type="object" style="writing-mode: horizontal-tb;"/>
                                        </group>
                                </group>
                                </sheet>
                            </group>

                        </sheet>
                </form>
        </field>
    </record>

    <record id='cxrs_purchase_action' model="ir.actions.act_window">
        <field name="name">采购总览</field>
        <field name="res_model">cxrs.purchase</field>
        <field name="view_mode">kanban,form</field>
    </record>

        <record id='cxrs_order_purchase_action' model="ir.actions.act_window">
        <field name="name">采购订单</field>
        <field name="res_model">cxrs.purchase</field>
        <field name="view_mode">tree,form</field>
    </record>

        <menuitem name="诚信二手" id="cxrs_menu_root" groups="base.group_user"/>
        <menuitem name="采购信息" id="cxrs_purchase_menu" parent="cxrs_menu_root"/>
        <menuitem name="采购总览" id="cxrs_all_purchase_menu" parent="cxrs_purchase_menu" action="cxrs_purchase_action" />
        <menuitem name="采购订单" id="cxrs_order_purchase_menu" parent="cxrs_purchase_menu" action="cxrs_order_purchase_action" />
</odoo>