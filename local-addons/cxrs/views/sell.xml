<?xml version="1.8" encoding="utf-8"?>
<odoo>

    <record id='cxrs_sell_tree_view' model="ir.ui.view">
        <field name="name">销售信息</field>
        <field name="model">cxrs.sell</field>
        <field name="arch" type="xml">
                <tree>
                    <field name="sell_id"/>
                    <field name="product_name"/>
                    <field name="sell_money"/>
                </tree>
        </field>
    </record>

<record id='cxrs_sell_view_form' model="ir.ui.view">
        <field name="name">采购订单</field>
        <field name="model">cxrs.sell</field>
        <field name="arch" type="xml">
                <form>
                        <sheet>
                                <group>
                                     <field name="sell_id"/>
                                     <field name="product_name"/>
                                     <field name="product_img" widget ='image' class ="oe_avatar oe_left"/>
                                     <field name="supplier" widget="many2many_tags"/>
                                     <field name="sell_date"/>
                                 </group>

                        </sheet>
                </form>
        </field>
    </record>

    <record id='cxrs_sell_action' model="ir.actions.act_window">
        <field name="name">销售信息</field>
        <field name="res_model">cxrs.sell</field>
        <field name="view_mode">tree,form</field>
    </record>
        <menuitem name="销售信息" id="cxrs_sell_menu" parent="cxrs_menu_root" action="cxrs_sell_action" />
</odoo>