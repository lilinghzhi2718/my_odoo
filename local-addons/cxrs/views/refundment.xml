<?xml version="1.8" encoding="utf-8"?>
<odoo>

    <record id='cxrs_refundment_tree_view' model="ir.ui.view">
        <field name="name">销售退款</field>
        <field name="model">cxrs.refundment</field>
        <field name="arch" type="xml">
                <tree>
                    <field name="product_name"/>
                    <field name="refundment_num"/>
                    <field name="refundment_date"/>
                </tree>
        </field>
    </record>

<record id='cxrs_refundment_form_view' model="ir.ui.view">
        <field name="name">销售退款</field>
        <field name="model">cxrs.refundment</field>
        <field name="arch" type="xml">
                <form>
                        <sheet>
                            <header>
                        <button string="取消" name="button_one" type="object" class="oe_highlight"/>
                        <button string="验证" name="button_two" type="object" class="oe_highlight" attrs="{'invisible': [('refundment_state', '=', 'two')]}"/>
                        <button string="确认订单" name="button_three" type="object" class="oe_highlight" attrs="{'invisible': [('refundment_state', '=', 'three')]}"/>
                            <field name="refundment_state" widget="statusbar" statusbar_visible="one,two,three"/>
                            </header>
                            <group>
                                     <field name="refundment_num"/>
                                      <field name="refundment_date"/>
                                 </group>

                                <sheet>
                                <group>
                                     <field name="re_pe_id"/>
                                      <field name="re_pr_id"/>
                                      <field name="re_sa_id"/>
                                </group>
                                </sheet>
                        </sheet>
                </form>
        </field>
    </record>

    <record id='cxrs_refundment_action' model="ir.actions.act_window">
        <field name="name">销售退款</field>
        <field name="res_model">cxrs.refundment</field>
        <field name="view_mode">tree,form</field>
    </record>

        <menuitem name="销售退单" id="cxrs_refundment_menu" parent="cxrs_sale_menu" action="cxrs_refundment_action" />
</odoo>