<?xml version="1.8" encoding="utf-8"?>
<odoo>

    <record id='cxrs_outstock_tree_view' model="ir.ui.view">
        <field name="name">出库信息</field>
        <field name="model">cxrs.outstock</field>
        <field name="arch" type="xml">
                <tree>
                    <field name="product_name"/>
                    <field name="outstock_num"/>
                    <field name="outstock_date"/>
                </tree>
        </field>
    </record>

<record id='cxrs_outstock_form_view' model="ir.ui.view">
        <field name="name">出库单</field>
        <field name="model">cxrs.outstock</field>
        <field name="arch" type="xml">
                <form>
                        <sheet>
                            <header>
                        <button string="取消" name="button_one" type="object" class="oe_highlight"/>
                        <button string="验证" name="button_two" type="object" class="oe_highlight" attrs="{'invisible': [('outstock_state', '=', 'two')]}"/>
                        <button string="确认订单" name="button_three" type="object" class="oe_highlight" attrs="{'invisible': [('outstock_state', '=', 'three')]}"/>
                            <field name="outstock_state" widget="statusbar" statusbar_visible="one,two,three"/>
                            </header>
                            <group>
                                     <field name="product_name"/>
                                     <field name="product_img" widget ='image' class ="oe_avatar oe_left"/>
                                     <field name="outstock_num"/>
                                      <field name="outstock_date"/>
                                 </group>

                                <sheet>
                                <group>
                                     <field name="ou_pe_id"/>
                                     <field name="ou_pr_id"/>
                                </group>
                                </sheet>
                        </sheet>
                </form>
        </field>
    </record>

    <record id='cxrs_outstock_action' model="ir.actions.act_window">
        <field name="name">出库信息</field>
        <field name="res_model">cxrs.outstock</field>
        <field name="view_mode">tree,form</field>
    </record>
        <menuitem name="诚信二手" id="cxrs_menu_root" groups="base.group_user"/>
        <menuitem name="出库信息" id="cxrs_outstock_menu" parent="cxrs_menu_root" action="cxrs_outstock_action" />
</odoo>