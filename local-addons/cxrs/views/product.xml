<?xml version="1.8" encoding="utf-8"?>
<odoo>

    <record id='cxrs_product_tree_view' model="ir.ui.view">
        <field name="name">货品信息</field>
        <field name="model">cxrs.product</field>
        <field name="arch" type="xml">
                <tree>
                    <field name="product_id"/>
                    <field name="product_name"/>
                    <field name="product_num" />
                    <field name="product_state" />
                </tree>
        </field>
    </record>

<record id='cxrs_product_view_form' model="ir.ui.view">
        <field name="name">货品信息</field>
        <field name="model">cxrs.product</field>
        <field name="arch" type="xml">
                <form>
                    <header>
                        <button string="验证" name="button_on" type="object" class="oe_highlight"/>
                        <button string="确认订单" name="button_out" type="object" class="oe_highlight"/>
                        <button string="退订" name="button_none" type="object" class="oe_highlight"/>
                            <field name="product_state" widget="statusbar" statusbar_visible="none,on,out"/>
                    </header>
                        <sheet>
                            <group>
                                <group>
                                     <field name="product_id"/>
                                     <field name="product_name"/>
                                     <field name="product_img" widget ='image' class ="oe_avatar oe_left"/>
                                     <field name="supplier" widget="many2many_tags"/>
                                     <field name="purchase_date"/>
                                 </group>
                                <group>

                                     <field name="product_cost"/>
                                     <field name="product_num"/>
                                     <field name="product_state"/>
                                </group>
                                <group>
                                     <field name="product_money"/>
                                     <field name="product_detail"/>
                                </group>
                            </group>

                        </sheet>
                </form>
        </field>
    </record>

    <record id='cxrs_product_action' model="ir.actions.act_window">
        <field name="name">货品信息</field>
        <field name="res_model">cxrs.product</field>
        <field name="view_mode">tree,form</field>
    </record>
        <menuitem name="诚信二手" id="cxrs_menu_root" groups="base.group_user"/>
        <menuitem name="货品信息" id="cxrs_product_menu" parent="cxrs_menu_root" action="cxrs_product_action" />
</odoo>