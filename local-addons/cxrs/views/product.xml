<?xml version="1.8" encoding="utf-8"?>
<odoo>

    <record id='cxrs_product_tree_view' model="ir.ui.view">
        <field name="name">物品信息</field>
        <field name="model">cxrs.product</field>
        <field name="arch" type="xml">
                <tree>
                    <field name="product_name"/>
                    <field name="product_num"/>
                    <field name="onhand_date"/>
                    <field name="product_state"/>
                </tree>
        </field>
    </record>

<record id="cxrs_product_kanban_view" model="ir.ui.view">
    <field name="model">cxrs.product</field>
    <field name="arch" type="xml">
        <kanban class="o_modules_kanban" default_group_by="product_state" default_order="product_state">
            <field name="product_state"/>
            <field name="color"/>
            <templates>
                <t t-name="kanban-box">
                    <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)}">
                    <div class="o_dropdown_kanban dropdown">
                        <a class="dropdown-toggle btn" data-toggle="dropdown" role="button" aria-label="Dropdown menu"
                            title="Dropdown menu" href="#">
                            <span class="fa fa-ellipsis-v"/>
                        </a>
                        <div class="dropdown-menu" role="menu">
                            <t t-if="widget.editable">
                                <a role="menuitem" type="edit" class="dropdown-item">编辑</a>
                            </t>
                            <t t-if="widget.deletable">
                                <a role="menuitem" type="delete" class="dropdown-item">删除</a>
                            </t>
                            <ul class="oe_kanban_colorpicker" data-field="color"/>
                        </div>

                    </div>


                    <div>
                        <div class="oe_kanban_body">
                            <div style="font-size:20px;">
                                <strong>
                                    <a type="open">
                                        <field name="product_name"/>
                                    </a>
                                </strong>
                            </div>
                            <ul>
                                <li>
                                    <field name="product_num"/>
                                </li>
                                <li>
                                    <field name="onhand_date"/>
                                </li>
                            </ul>
                        </div>
                        <div class="o_kanban_record_bottom">
                            <div class="oe_kanban_bottom_left">
                              <field name="product_state" widget="priority"/>
                            </div>
                            <div class="oe_kanban_bottom_right">
                                <field name="product_img" widget="image" options="{'size':[80,80]}"/>
                            </div>
                        </div>
                        <div class="oe_clear"/>
                    </div>
                    </div>
                </t>
            </templates>
        </kanban>
    </field>

</record>
<record id='cxrs_product_form_view' model="ir.ui.view">
        <field name="name">物品信息</field>
        <field name="model">cxrs.product</field>
        <field name="arch" type="xml">
                <form>
                    <header>
                        <button string="取消" name="button_one" type="object" class="oe_highlight"/>
                        <button string="验证" name="button_two" type="object" class="oe_highlight"/>
                        <button string="确认入库" name="button_three" type="object" class="oe_highlight"/>
                        <button string="销售" name="button_four" type="object" class="oe_highlight"/>
                            <field name="product_state" widget="statusbar" statusbar_visible="one,two,three,four"/>
                    </header>
                        <sheet>
                            <group>
                                <group>
                                     <field name="product_ids"/>
                                     <field name="pr_pu_id"/>
                                     <field name="pr_pe_id"/>
                                     <field name="product_name"/>
                                     <field name="product_img" widget ='image' class ="oe_avatar oe_left"/>
                                     <field name="purchase_date"/>
                                 </group>
                                <sheet>
                                                                    <group>
                                    <field name="purchase_date"/>
                                     <field name="purchase_cost"/>
                                     <field name="purchase_num"/>
                                    <field name="purchase_money"/>
                                    <field name="purchase_detail"/>
                                </group>
                                <group>
                                     <field name="product_name"/>
                                     <field name="product_num"/>
                                    <field name="onhand_date"/>
                                    <field name="outhand_date"/>
                                </group>

                                </sheet>
                                <sheet>
                                <group>
                                     <field name="pr_st_id"/>
                                    <field name="zone_ids"/>
                                     <field name="rack_ids"/>
                                </group>
                                </sheet>
                            </group>

                        </sheet>
                </form>
        </field>
    </record>

    <record id='cxrs_allproduct_action' model="ir.actions.act_window">
        <field name="name">物品总览</field>
        <field name="res_model">cxrs.product</field>
        <field name="view_mode">kanban,form</field>
    </record>
        <record id='cxrs_product_action' model="ir.actions.act_window">
        <field name="name">入库单</field>
        <field name="res_model">cxrs.product</field>
        <field name="view_mode">tree,form</field>
    </record>
        <menuitem name="物品总览" id="cxrs_allproduct_menu" parent="cxrs_stock_menu" action="cxrs_allproduct_action" />
        <menuitem name="入库信息" id="cxrs_product_menu" parent="cxrs_stock_menu" action="cxrs_product_action" />

</odoo>