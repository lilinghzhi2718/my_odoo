<?xml version="1.8" encoding="utf-8"?>
<odoo>

    <record id='cxrs_person_tree_view' model="ir.ui.view">
        <field name="name">人物信息</field>
        <field name="model">cxrs.person</field>
        <field name="arch" type="xml">
                <tree>
                    <field name="person_name"/>
                    <field name="person_ids"/>
                    <field name="person_img"/>
                </tree>
        </field>
    </record>

<record id="cxrs_person_kanban_view" model="ir.ui.view">
    <field name="model">cxrs.person</field>
    <field name="arch" type="xml">
        <kanban class="o_modules_kanban">
            <field name="color"/>
            <templates>
                <t t-name="kanban-box">
                    <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)}">
                    <div class="o_dropdown_kanban dropdown">
                        <a class="dropdown-toggle btn" data-toggle="dropdown" role="button" aria-label="Dropdown menu"
                            title="Dropdown menu" href="#">
                            <span class="fa fa-ellipsis-v"/>
                        </a>
                        <div class="dropdown-menu" role="menu">
                            <t t-if="widget.editable">
                                <a role="menuitem" type="edit" class="dropdown-item">编辑</a>
                            </t>
                            <t t-if="widget.deletable">
                                <a role="menuitem" type="delete" class="dropdown-item">删除</a>
                            </t>
                            <ul class="oe_kanban_colorpicker" data-field="color"/>
                        </div>

                    </div>


                    <div>
                        <div class="oe_kanban_body">
                            <div style="font-size:20px;">
                                <strong>
                                    <a type="open">
                                        <field name="person_name"/>
                                    </a>
                                </strong>
                            </div>
                            <ul>
                                <li>
                                    <field name="person_ids"/>
                                </li>
                                <li>
                                    <field name="person_tel"/>
                                </li>
                            </ul>
                        </div>
                        <div class="o_kanban_record_bottom">
                            <div class="oe_kanban_bottom_left">

                            </div>
                            <div class="oe_kanban_bottom_right">
                                <field name="person_img" widget="image" options="{'size':[80,80]}"/>
                            </div>
                        </div>
                        <div class="oe_clear"/>
                    </div>
                    </div>
                </t>
            </templates>
        </kanban>
    </field>

</record>
<record id='cxrs_person_form_view' model="ir.ui.view">
        <field name="name">人物信息</field>
        <field name="model">cxrs.person</field>
        <field name="arch" type="xml">
                <form>
                        <sheet>
                            <group>
                                <group>
                                     <field name="person_ids"/>
                                     <field name="person_name"/>
                                     <field name="person_wx"/>
                                     <field name="person_tel"/>
                                     <field name="person_img" widget ='image' class ="oe_avatar oe_left"/>
                                 </group>
                                <sheet>
                                <group>
                                     <field name="pe_pu_id"/>
                                </group>
                                </sheet>
                            </group>
                                <sheet>
                                     <field name="pe_pr_id"/>
                                </sheet>
                        </sheet>
                </form>
        </field>
    </record>

    <record id='cxrs_person_action' model="ir.actions.act_window">
        <field name="name">采购信息</field>
        <field name="res_model">cxrs.person</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>
        <menuitem name="诚信二手" id="cxrs_menu_root" groups="base.group_user"/>
        <menuitem name="人物信息" id="cxrs_person_menu" parent="cxrs_menu_root" action="cxrs_person_action" />
</odoo>